<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="Search Options"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/noFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/filter_view_button_margin"
        android:layout_weight="1"
        android:theme="@style/AppTheme.FilterButtonSelected"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Clear All" />

    <LinearLayout
        android:id="@+id/offeredFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/offeredNone"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Off" />

        <Button
            android:id="@+id/offeredFall"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Fall" />

        <Button
            android:id="@+id/offeredIAP"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="IAP" />

        <Button
            android:id="@+id/offeredSpring"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Spring" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/levelFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/levelNone"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Off" />

        <Button
            android:id="@+id/levelUG"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Undergrad" />

        <Button
            android:id="@+id/levelG"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Grad" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hassFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noHASS"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/hassColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Off" />

        <Button
            android:id="@+id/HASS"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/hassColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="HASS" />

        <Button
            android:id="@+id/HASS_A"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/hassColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="A" />

        <Button
            android:id="@+id/HASS_H"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/hassColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="H" />

        <Button
            android:id="@+id/HASS_S"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/hassColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="S" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ciFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noCI"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/ciColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Off" />

        <Button
            android:id="@+id/CI_H"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/ciColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="CI-H" />

        <Button
            android:id="@+id/CI_HW"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/ciColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="CI-HW" />

        <Button
            android:id="@+id/notCI"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/ciColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Not CI" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/girFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/girNone"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/girColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Off" />

        <Button
            android:id="@+id/girAny"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/girColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="GIR" />

        <Button
            android:id="@+id/girLab"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/girColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Lab" />

        <Button
            android:id="@+id/girRest"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/filter_view_button_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/girColor"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="REST" />

    </LinearLayout>
</LinearLayout>