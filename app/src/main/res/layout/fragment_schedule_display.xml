                        android:layout_below="@id/horizontal4"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/hourLabel5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/horizontal5"
                        android:layout_marginTop="@dimen/schedule_hour_label_margin"
                        android:paddingEnd="@dimen/schedule_hour_label_margin"
                        android:text="5"
                        android:textAlignment="textEnd"/>
                    <View
                        android:id="@+id/horizontal6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/schedule_line_width"
                        android:background="@color/scheduleBorderColor"
                        android:layout_below="@id/horizontal5"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/hourLabel6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/horizontal6"
                        android:layout_marginTop="@dimen/schedule_hour_label_margin"
                        android:paddingEnd="@dimen/schedule_hour_label_margin"
                        android:text="6"
                        android:textAlignment="textEnd"/>
                    <View
                        android:id="@+id/horizontal7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/schedule_line_width"
                        android:background="@color/scheduleBorderColor"
                        android:layout_below="@id/horizontal6"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/hourLabel7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/horizontal7"
                        android:layout_marginTop="@dimen/schedule_hour_label_margin"
                        android:paddingEnd="@dimen/schedule_hour_label_margin"
                        android:text="7"
                        android:textAlignment="textEnd"/>
                    <View
                        android:id="@+id/horizontal8P"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/schedule_line_width"
                        android:background="@color/scheduleBorderColor"
                        android:layout_below="@id/horizontal7"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/hourLabel8P"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/horizontal8P"
                        android:layout_marginTop="@dimen/schedule_hour_label_margin"
                        android:paddingEnd="@dimen/schedule_hour_label_margin"
                        android:text="8"
                        android:textAlignment="textEnd"/>
                    <View
                        android:id="@+id/horizontal9P"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/schedule_line_width"
                        android:background="@color/scheduleBorderColor"
                        android:layout_below="@id/horizontal8P"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/hourLabel9P"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/horizontal9P"
                        android:layout_marginTop="@dimen/schedule_hour_label_margin"
                        android:paddingEnd="@dimen/schedule_hour_label_margin"
                        android:text="9"
                        android:textAlignment="textEnd"/>
                    <View
                        android:id="@+id/horizontal10P"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/schedule_line_width"
                        android:background="@color/scheduleBorderColor"
                        android:layout_below="@id/horizontal9P"
                        android:layout_marginTop="@dimen/schedule_hour_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>

                <include
                    android:id="@+id/columnLayoutMonday"
                    layout="@layout/column_schedule_day" />

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>

                <include
                    android:id="@+id/columnLayoutTuesday"
                    layout="@layout/column_schedule_day"/>

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>

                <include
                    android:id="@+id/columnLayoutWednesday"
                    layout="@layout/column_schedule_day"/>

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>

                <include
                    android:id="@+id/columnLayoutThursday"
                    layout="@layout/column_schedule_day" />

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>

                <include
                    android:id="@+id/columnLayoutFriday"
                    layout="@layout/column_schedule_day" />

                <View android:layout_width="@dimen/schedule_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/scheduleBorderColor"/>
            </LinearLayout>
        </RelativeLayout>

    </HorizontalScrollView>

</ScrollView>